{
  "name": "lollipop-tools",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.10.0",
  "scripts": {
    "build": "npm run clean && turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "changeset": "changeset",
    "version": "changeset version",
    "publish": "changeset publish",
    "clean": "pnpm -r exec rm -rf dist",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "lanzifeng118",
  "license": "ISC",
  "description": "Lollipop Tools for managing npm packages",
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@types/node": "^20.11.5",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "turbo": "^2.4.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  }
}
